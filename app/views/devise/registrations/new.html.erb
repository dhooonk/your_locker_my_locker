<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="container contents-center">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2><%= t(".sign_up") %></h2>
      <div class="form-inputs">
      <%= f.input :name, required: true, autofocus: true, label: "이름" %>
      <%= f.input :studentNumber, required: true, label: "학번(아이디)" %>
      <%= f.input :password, required: true, label: "비밀번호" %>
      <%= f.input :password_confirmation, required: true, label: "비밀번호확인" %>
      <%= f.input :phoneNumber, required: true, label: "연락처"%>
      <%= f.input :email, required: true, autofocus: true, label: "이메일" %>
      <%= f.input :major, required: true, label: "학과", as: :radio_buttons, :collection => [ "응용화학과" ]%>
      <%= f.input :feeOfSchool, required: true, label: "학생회비 납부여부", as: :radio_buttons, :collection => [ "납부","미납" ]%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-actions">
        <%= f.button :submit, t(".sign_up") %>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
